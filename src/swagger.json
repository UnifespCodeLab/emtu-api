{
  "openapi": "3.0.0",
  "info": {
    "title": "EMTU-API Documentation",
    "description": "EMTU-API.",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Main"
        ],
        "summary": "Verifica se o servidor está rodando",
        "description": "Verifica se o servidor está rodando",
        "responses": {
          "200": {
            "description": "EMTU-API",
            "content": {
              "application/json": {
                "item": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/city": {
      "get": {
        "tags": [
          "City"
        ],
        "summary": "Cidades EMTU",
        "description": "Retorna as cidades que possuem linha de ônibus",
        "responses": {
          "200": {
            "description": "Lista de cidades",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": 1,
                    "name": "Jacareí"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Falha ao obter dados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Erro ao obter dados"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Rota de usuários",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "José",
                  "email": "jose.email@email.com",
                  "password": "senha@123"
                }
              }
            }
          }
        },
          "responses": {
            "200": {
              "description": "Cadastra usuário",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "token": "JWTtoken"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Falha ao cadastrar usuário",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "erro": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "erro": "Falha ao cadastrar usuário"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Parâmetros inválidos",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "erro": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "erro": "Parâmetros inválidos"
                    }
                  }
                }
              }
            },
            "409": {
              "description": "Usuário já existe",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "erro": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "erro": "Usuário já existe"
                    }
                  }
                }
              }
            }
          }
        }
      },
    "/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Rota de login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "jose.email@email.com",
                  "password": "senha@123"
                }
              }
            }
          }
        },
          "responses": {
            "200": {
              "description": "Efetua o login do usuário",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "token": "JWTtoken"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Falha ao efetuar o login do usuário",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "erro": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "erro": "Falha ao efetuar o login do usuário"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Parâmetros inválidos",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "erro": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "erro": "Parâmetros inválidos"
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Não foram enviados todos os parâmetros obrigatórios",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "erro": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "erro": "Não foram enviados todos os parâmetros obrigatórios"
                    }
                  }
                }
              }
            }
          }
        }
      }  
    }
  }