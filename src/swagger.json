{
  "openapi": "3.0.0",
  "info": {
    "title": "EMTU-API Documentation",
    "description": "EMTU-API.",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Main"
        ],
        "summary": "Verifica se o servidor está rodando",
        "description": "Verifica se o servidor está rodando",
        "responses": {
          "200": {
            "description": "EMTU-API",
            "content": {
              "application/json": {
                "item": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/city": {
      "get": {
        "tags": [
          "City"
        ],
        "summary": "Cidades EMTU",
        "description": "Retorna as cidades que possuem linha de ônibus",
        "responses": {
          "200": {
            "description": "Lista de cidades",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": 1,
                    "name": "Jacareí"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Falha ao obter dados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Erro ao obter dados"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Rota de usuários",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "José",
                  "email": "jose.email@email.com",
                  "password": "senha@123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cadastra usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "token": "JWTtoken"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Falha ao cadastrar usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Falha ao cadastrar usuário"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Parâmetros inválidos"
                  }
                }
              }
            }
          },
          "409": {
            "description": "Usuário já existe",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Usuário já existe"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Rota de login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "jose.email@email.com",
                  "password": "senha@123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Efetua o login do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "token": "JWTtoken"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Falha ao efetuar o login do usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Falha ao efetuar o login do usuário"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Parâmetros inválidos"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Não foram enviados todos os parâmetros obrigatórios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "erro": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "erro": "Não foram enviados todos os parâmetros obrigatórios"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/cids": {
      "get": {
        "tags": [
          "Cids"
        ],
        "summary": "Cids e seus campos",
        "description": "Retorna todos os cids com seus respectivos códigos e descrições para classificar passageiros",
        "responses": {
          "200": {
            "description": "Lista de cids",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "cod": {
                      "type": "string"
                    },
                    "diagnostic": {
                      "type": "string"
                    },
                    "observations": {
                      "type": "string"
                    },
                    "companion": {
                      "type": "string"
                    },
                    "duration": {
                      "type": "number"
                    },
                    "requirements": {
                      "type": "string"
                    },
                    "group": {
                      "type": "string"
                    }
                  },
                  "example": [
                    {
                      "id": 1,
                      "cod": "B20.0",
                      "diagnostic": "Doença pelo HIV resultando em infecções microbacterianas (resultando em tuberculose)",
                      "observations": "",
                      "companion": "Não",
                      "duration": 1,
                      "requirements": "Relatório Médico com CID +\nteste de Tuberculose + receitas (se tiver teste HIV + )",
                      "group": "G3"
                    },
                    {
                      "id": 2,
                      "cod": "B20.1",
                      "diagnostic": "Doença pelo HIV resultando em outras infecções bacterianas",
                      "observations": "Somente com doença oportunista: A15 até A19;B58 e B59;J13 até J18 e J65;C46",
                      "companion": "Não",
                      "duration": 1,
                      "requirements": "Relatório Médico com CID e\ndescrição das oportunistas atuais (se tiver teste HIV + infecções )",
                      "group": "G3"
                    },
                    {
                      "id": 3,
                      "cod": "B20.2",
                      "diagnostic": "Doença pelo HIV resultando em doença citomegálica",
                      "observations": "Somente com doença oportunista: A15 até A19;B58 e B59;J13 até J18 e J65; C46.",
                      "companion": "Não\nObs: Casos com amaurose bilateral\nOU grave deficiência visual é com acompanhante",
                      "duration": 1,
                      "requirements": "Relatório Médico com CID e descrição das oportunistas atuais (se tiver teste HIV +)",
                      "group": "G3"
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Falha ao obter dados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensagem": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "mensagem": "Erro ao obter cids"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/searches": {
      "post": {
        "tags": [
          "Search"
        ],
        "summary": "Endpoint para salvar as rotas buscadas",
        "description": "Salva uma nova busca de rota realizada no banco de dados",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "idCidadeOrigem": {
                    "type": "number"
                  },
                  "idCidadeDestino": {
                    "type": "number"
                  },
                  "idCid": {
                    "type": "number",
                    "optional": true
                  },
                  "dataViagem": {
                    "type": "string",
                    "optional": true
                  },
                  "horaViagem": {
                    "type": "string",
                    "optional": true
                  }
                },
                "example": {
                  "idCidadeOrigem": 1,
                  "idCidadeDestino": 2,
                  "idCid": 3,
                  "dataViagem": "2023-01-15",
                  "horaViagem": "11:00"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Rota buscada salva com sucesso no banco de dados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "routeSearch": {
                      "type": "object"
                    }
                  },
                  "example": {
                    "message": "Rota buscada salva com sucesso",
                    "routeSearch": {
                      "id": 4,
                      "id_cidade_origem": 1,
                      "id_cidade_destino": 2,
                      "id_cid": 3,
                      "data_viagem": "2023-10-03T03:00:00.000Z",
                      "hora_viagem": "09:25",
                      "data_criacao": "2023-04-18T16:32:26.883Z"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Falha no servidor não mapeada ao tentar salvar a rota buscada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Um erro inesperado aconteceu ao tentar salvar a rota buscada"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Não foram enviados todos os parâmetros obrigatórios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Parâmetros obrigatórios não informados: idCidadeOrigem,idCidadeDestino"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}